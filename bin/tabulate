#!/usr/bin/env ruby
# frozen_string_literal: true

require 'json'

require_relative '../lib/twenty_48'

puts %w(board_size max_exponent max_resolve_depth states size).join(',')

def tabulate(model)
  hash = model.build_hash_model
  puts [
    model.board_size,
    model.max_exponent,
    model.max_resolve_depth,
    hash.size,
    JSON.dump(hash).size
  ].join(',')
end

(2..7).each do |max_exponent|
  (0..[max_exponent - 1, 3].min).each do |max_resolve_depth|
    tabulate(Twenty48::Builder.new(2, max_exponent, max_resolve_depth))
  end
end

(2..4).each do |max_exponent|
  (0..[max_exponent - 1, 3].min).each do |max_resolve_depth|
    tabulate(Twenty48::Builder.new(3, max_exponent, max_resolve_depth))
  end
end

