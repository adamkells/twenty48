#!/usr/bin/env ruby
# frozen_string_literal: true

require 'fileutils'

require_relative '../lib/twenty48'

include Twenty48

ARGV.each do |path|
  puts path
  num_states = 0
  max_layer_sum = 0
  LayerPartInfoName.glob(path).each do |info|
    num_states += info.read(folder: path)['num_states']
    max_layer_sum = info.sum if info.sum > max_layer_sum
  end
  puts "num_states: #{num_states}"
  puts "max_layer_sum: #{max_layer_sum}"
end
